<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
    <schema path="/io/elementary/desktop/wingpanel/sound/" id="io.elementary.desktop.wingpanel.sound">
        <key type="d" name="max-volume">
            <default>100</default>
            <range min="1" max="160"/>
            <summary>Define the maximum volume in %.</summary>
            <description>With this value you can customize the volume range. So if e.g. your speaker reach their max. tolerated volume at 20%, you can set the max volume to 20% and the sound indicator will adapt to this.</description>
        </key>
        <key type="as" name="last-title-info">
            <default>[]</default>
            <summary>Last played title of the default media player.</summary>
        </key>
        <key type="a{si}" name="preferred-devices">
            <default>[]</default>
            <summary>Previously used audio devices.</summary>
        </key>
        <key type="as" name="volume-up">
            <default><![CDATA[['XF86AudioRaiseVolume', '<Ctrl>XF86AudioRaiseVolume']]]></default>
            <summary>Volume up</summary>
        </key>
        <key type="as" name="volume-down">
            <default><![CDATA[['XF86AudioLowerVolume', '<Ctrl>XF86AudioLowerVolume']]]></default>
            <summary>Volume down</summary>
        </key>
        <key type="as" name="volume-mute">
            <default><![CDATA[['XF86AudioMute']]]></default>
            <summary>Volume mute/unmute</summary>
        </key>
    </schema>
</schemalist>
