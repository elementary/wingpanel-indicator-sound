<component type="addon">
  <id>io.elementary.wingpanel.sound</id>
  <extends>io.elementary.wingpanel</extends>
  <name>Sound Indicator</name>
  <summary>Adjust speaker and microphone volume or see Now Playing information and media controls</summary>
  <icon type="stock">preferences-desktop-sound</icon>
  <releases>
    <release version="6.0.2" date="2022-10-18" urgency="medium">
      <description>
        <p>Minor updates</p>
        <ul>
          <li>Use device form factor when available to assign more accurate icons</li>
          <li>Provide a fallback device icon when none is available</li>
          <li>Fix missing switch animations</li>
          <li>Use the volume step value from GNOME Settings Daemon</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>

    <release version="6.0.1" date="2021-11-18" urgency="medium">
      <description>
        <p>Minor updates</p>
        <ul>
          <li>Show more specific icons for different types of devices</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="6.0.0" date="2021-07-14" urgency="medium">
      <description>
        <p>New features</p>
        <ul>
          <li>select specific input and output devices</li>
        </ul>
        <p>Minor updates</p>
        <ul>
          <li>Hide temporary audio players when they stop</li>
          <li>Add a tooltip on hover</li>
          <li>Minor visual improvements</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="2.1.8" date="2020-12-23" urgency="medium">
      <description>
        <p>Minor updates</p>
        <ul>
          <li>Fix duplicate default player</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="2.1.7" date="2020-10-08" urgency="medium">
      <description>
        <p>Minor updates</p>
        <ul>
          <li>Fix opacity flash during icon animation</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>
    <release version="2.1.6" date="2020-08-07" urgency="medium">
      <description>
        <p>Update default music player when changed</p>
        <p>Updated translations</p>
      </description>
    </release>
    <release version="2.1.5" date="2020-04-02" urgency="medium">
      <description>
        <p>Correctly show "Unknown Artist" when artist info isn't available</p>
        <p>Performance improvements</p>
        <p>Updated translations</p>
      </description>
    </release>
    <release version="2.1.4" date="2019-11-25" urgency="medium">
      <description>
        <p>Updated translations</p>
      </description>
    </release>
  </releases>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/elementary/wingpanel-indicator-sound/master/data/screenshot.png</image>
    </screenshot>
  </screenshots>
  <developer_name>elementary, Inc.</developer_name>
